<form class="form-horizontal">
<fieldset>

<!-- Form Name -->
<legend>Envoi message</legend>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="sujet">Sujet</label>
  <div class="col-md-4">
  <input id="sujet" name="sujet" type="text" placeholder="Sujet" class="form-control input-md" required="">
  </div>
</div>

<!-- File Button -->
<div class="form-group">
  <label class="col-md-4 control-label" for="joindre">Pi√®ce jointe</label>
  <div class="col-md-4">
    <input id="joindre" name="joindre" class="input-file" type="file">
  </div>
</div>

<!-- Textarea -->
<div class="form-group">
  <label class="col-md-4 control-label" for="textarea">Message</label>
  <div class="col-md-4">
    <textarea class="form-control" id="textarea" name="textarea"></textarea>
  </div>
</div>

<!-- Select Multiple -->
<div class="form-group">
  <label class="col-md-4 control-label" for="Select">En cours</label>
  <div class="col-md-4">
    <select id="Select" name="Select" class="form-control" multiple="multiple">
      <option value="1">Serge NOEL</option>
    </select>
  </div>
</div>

<!-- Button -->
<div class="form-group">
  <label class="col-md-4 control-label" for="send"></label>
  <div class="col-md-4">
    <button id="send" name="send" class="btn btn-primary">Envoyer</button>
  </div>
</div>

<!-- Multiple Radios (inline) -->
<div class="form-group">
  <label class="col-md-4 control-label" for="type">A</label>
  <div class="col-md-4">
    <label class="radio-inline" for="type-0">
      <input type="radio" name="type" id="type-0" value="1" checked="checked">
      Echantillon
    </label>
    <label class="radio-inline" for="type-1">
      <input type="radio" name="type" id="type-1" value="2">
      Macla
    </label>
    <label class="radio-inline" for="type-2">
      <input type="radio" name="type" id="type-2" value="3">
      Bureau
    </label>
  </div>
</div>

</fieldset>
</form>

